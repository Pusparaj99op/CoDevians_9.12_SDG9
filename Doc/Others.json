{
  "project": {
    "name": "Mudra - Other Configurations",
    "approach": "Incremental Development"
  },
  "testing_by_iteration": {
    "philosophy": "Test what matters, when it matters",
    "iteration_0_5": {
      "testing": "Manual testing only",
      "reason": "Moving fast, features changing rapidly",
      "method": "Browser DevTools + Postman/Thunder Client"
    },
    "iteration_6_10": {
      "testing": "Basic API testing",
      "tools": [
        "Postman Collection",
        "Manual UI testing"
      ],
      "focus": "Auth flow, trading logic"
    },
    "iteration_11_15": {
      "testing": "Consider automated tests",
      "tools": [
        "Jest (optional)",
        "Postman automated"
      ],
      "focus": "Critical paths only"
    },
    "iteration_16_20": {
      "testing": "Add if time permits",
      "tools": [
        "Jest",
        "React Testing Library"
      ],
      "focus": "Regression prevention"
    }
  },
  "deployment_strategy": {
    "iteration_0_10": {
      "deployment": "Local development only",
      "frontend": "localhost:5001",
      "backend": "localhost:3210",
      "database": "localhost:27017"
    },
    "iteration_11_15": {
      "deployment": "Prepare for demo",
      "options": [
        {
          "name": "Vercel + Railway",
          "frontend": "Vercel (free)",
          "backend": "Railway (free tier)",
          "database": "MongoDB Atlas (free)"
        },
        {
          "name": "Local network",
          "method": "Run on laptop, share via ngrok",
          "cost": "Free"
        }
      ]
    },
    "iteration_16_20": {
      "deployment": "Production-ready",
      "recommended": {
        "frontend": "Vercel",
        "backend": "Railway or Render",
        "database": "MongoDB Atlas M0",
        "domain": "Optional custom domain"
      }
    }
  },
  "version_control": {
    "branching_simple": {
      "main": "Always working code",
      "development": "Current work",
      "workflow": "develop → test → merge to main"
    },
    "commit_frequency": "After each working feature",
    "commit_messages": {
      "format": "iteration-X: description",
      "examples": [
        "iteration-0: basic server setup",
        "iteration-3: mongodb connection",
        "iteration-5: user authentication"
      ]
    }
  },
  "documentation_approach": {
    "iteration_0_10": {
      "focus": "Code comments only",
      "readme": "Basic setup instructions"
    },
    "iteration_11_15": {
      "focus": "API documentation",
      "method": "Postman collection export or simple README"
    },
    "iteration_16_20": {
      "focus": "Demo documentation",
      "includes": [
        "Setup guide",
        "Features list",
        "Screenshots"
      ]
    }
  },
  "team_workflow": {
    "team_members": {
      "pranay": {
        "role": "Team Lead / Full Stack",
        "focus": [
          "Architecture",
          "Integration",
          "Debugging"
        ]
      },
      "abhijit": {
        "role": "Backend Developer",
        "focus": [
          "API development",
          "Database",
          "Business logic"
        ]
      },
      "samiksh": {
        "role": "Frontend Developer",
        "focus": [
          "UI components",
          "Pages",
          "Styling"
        ]
      },
      "vineet": {
        "role": "Documentation & Support",
        "focus": [
          "Docs",
          "Testing",
          "Presentation"
        ]
      }
    },
    "parallel_work": {
      "iteration_0": "All together - basic setup",
      "iteration_1_2": {
        "frontend": "Samiksh - UI components",
        "backend": "Abhijit - API endpoints",
        "integration": "Pranay - Connect both"
      },
      "iteration_3_4": {
        "frontend": "Samiksh - Bond details page",
        "backend": "Abhijit - MongoDB + Bond API",
        "docs": "Vineet - Test and document"
      },
      "iteration_5_6": {
        "frontend": "Samiksh - Auth pages",
        "backend": "Abhijit - Auth APIs",
        "integration": "Pranay - Auth flow"
      },
      "iteration_7_10": {
        "frontend": "Samiksh - Dashboard + Trading UI",
        "backend": "Abhijit - Trading APIs",
        "testing": "Vineet - Test trading flow"
      }
    },
    "daily_sync": "15 min standup - What done, what next, blockers"
  },
  "hackathon_priorities": {
    "must_have": {
      "iterations": "0-10",
      "features": [
        "Display bonds",
        "User registration/login",
        "Paper trading (buy/sell)",
        "Portfolio view"
      ],
      "demo_value": "Working MVP"
    },
    "should_have": {
      "iterations": "11-15",
      "features": [
        "Search and filter",
        "Charts",
        "Landing page",
        "Mobile responsive"
      ],
      "demo_value": "Polished product"
    },
    "nice_to_have": {
      "iterations": "16-20",
      "features": [
        "Real-time updates",
        "Leaderboard",
        "Advanced animations"
      ],
      "demo_value": "Impressive extras"
    }
  },
  "risk_mitigation": {
    "time_crunch": {
      "problem": "Running out of time",
      "solution": "Stop at iteration 10, polish what exists"
    },
    "api_not_working": {
      "problem": "Backend issues",
      "solution": "Use mock data in frontend, fix backend separately"
    },
    "database_issues": {
      "problem": "MongoDB problems",
      "solution": "Fallback to JSON file as in iteration 0-2"
    },
    "feature_creep": {
      "problem": "Adding too many features",
      "solution": "Stick to iteration plan, no new features"
    }
  },
  "tools_and_setup": {
    "required": {
      "editor": "VS Code",
      "node": "v18 or higher",
      "mongodb": "v6 or MongoDB Atlas",
      "git": "For version control"
    },
    "recommended_extensions": [
      "ES7+ React/Redux/React-Native snippets",
      "Tailwind CSS IntelliSense",
      "Prettier",
      "Thunder Client (API testing)"
    ],
    "optional": {
      "postman": "For API documentation",
      "figma": "For design mockups",
      "notion": "For team notes"
    }
  },
  "environment_setup": {
    "frontend_env": {
      "file": ".env.local",
      "variables": {
        "NEXT_PUBLIC_API_URL": "http://localhost:3210/api"
      }
    },
    "backend_env": {
      "file": ".env",
      "variables": {
        "PORT": "3210",
        "MONGODB_URI": "mongodb://localhost:27017/mudra",
        "JWT_SECRET": "your-super-secret-key-change-in-production",
        "NODE_ENV": "development"
      }
    }
  },
