  "animation_architecture": {
    "gsap_implementation": {
      "initialization": {
        "setup": "Global GSAP context in _app.tsx",
        "plugins": "Register ScrollTrigger, ScrollSmoother globally",
        "kill_on_unmount": "Cleanup animations on component unmount"
      },
      "scroll_animations": {
        "landing_hero": {
          "animation": "Parallax background with 3D perspective",
          "trigger": "On load + scroll",
          "elements": [
            "Hero title: fade in + slide up",
            "Subtitle: fade in with delay",
            "CTA buttons: scale in with bounce",
            "Background particles: float animation"
          ]
        },
        "bond_cards": {
          "animation": "Stagger fade-in as user scrolls",
          "trigger": "ScrollTrigger at 80% viewport",
          "effect": "Each card slides up with 0.1s stagger"
        },
        "statistics_section": {
          "animation": "Counter animation from 0 to value",
          "trigger": "When section enters viewport",
          "effect": "Number morphing with easing"
        },
        "feature_showcase": {
          "animation": "Pin section + horizontal scroll",
          "trigger": "Scroll-based progression",
          "effect": "Horizontal carousel while section is pinned"
        }
      },
      "svg_animations": {
        "logo": "DrawSVG plugin - line drawing effect",
        "charts": "MorphSVG for smooth transitions between data states",
        "icons": "Hover animations with scale and rotation"
      },
      "text_animations": {
        "split_text": "SplitText plugin for character-by-character animations",
        "typewriter_effect": "Sequential character reveal",
        "scramble_effect": "Text scramble on hover"
      }
    },
    "three_js_implementation": {
      "scenes": {
        "landing_background": {
          "type": "Particle field with depth",
          "geometry": "BufferGeometry with 10,000 particles",
          "material": "PointsMaterial with gradient colors",
          "animation": "Floating + mouse parallax",
          "performance": "Reduced particle count on mobile (2,000)"
        },
        "bond_visualization": {
          "type": "3D bar chart with interactive rotation",
          "library": "@react-three/fiber + @react-three/drei",
          "interaction": "Click to view bond details",
          "animation": "Smooth rotation on mouse move"
        },
        "globe_view": {
          "type": "Interactive globe showing infrastructure projects",
          "library": "react-globe.gl",
          "features": [
            "Markers for each project location",
            "Arc lines connecting related projects",
            "Auto-rotation with pause on hover",
            "Clickable markers for details"
          ]
        },
        "loading_screen": {
          "type": "3D animated logo",
          "animation": "Rotation + scale pulse",
          "duration": "2-3 seconds"
        }
      },
      "performance_optimization": {
        "mobile": "Disable 3D on devices < 768px or low GPU",
        "lod": "Level of Detail - reduce complexity at distance",
        "frustum_culling": "Don't render off-screen objects",
        "gpu_detection": "Detect GPU capabilities and adjust quality"
      }
    },
    "lenis_implementation": {
      "setup": {
        "provider": "<ReactLenis> wrapper in _app.tsx",
        "options": {
          "duration": 1.2,
          "easing": "(t) => Math.min(1, 1.001 - Math.pow(2, -10 * t))",
          "direction": "vertical",
          "smooth": true,
          "smoothTouch": false,
          "touchMultiplier": 2
        }
      },
      "integration": {
        "gsap": "Lenis.scrollTo() with GSAP ScrollTrigger",
        "anchors": "Smooth scroll to anchor links",
        "sections": "Section-based navigation"
      },
      "mobile_behavior": {
        "smoothTouch": false,
        "reason": "Native touch scrolling feels better on mobile"
      }
    },
    "framer_motion_patterns": {
      "page_transitions": {
        "variants": {
          "initial": "{ opacity: 0, x: -100 }",
          "animate": "{ opacity: 1, x: 0 }",
          "exit": "{ opacity: 0, x: 100 }"
        },
        "transition": "{ type: 'spring', stiffness: 300, damping: 30 }"
      },
      "modal_animations": {
        "backdrop": "Fade in/out",
        "content": "Scale from 0.8 to 1 with spring",
        "exit": "Scale to 0.9 and fade out"
      },
      "card_hover": {
        "whileHover": "{ scale: 1.05, y: -5 }",
        "whileTap": "{ scale: 0.98 }",
        "transition": "{ type: 'spring', stiffness: 400 }"
      },
      "list_animations": {
        "container": "Stagger children by 0.1s",
        "item": "Fade in + slide up",
        "exit": "Fade out + slide down"
      },
      "shared_layout": {
        "use_case": "Expanding cards to full-page view",
        "layoutId": "Unique ID for element matching"
      },
      "gesture_animations": {
        "drag": "Draggable cards with snap-back",
        "swipe": "Swipe to dismiss notifications",
        "pan": "Pan to reveal options"
      }
    },
    "animation_performance": {
      "gpu_acceleration": "transform and opacity only",
      "will_change": "Applied strategically to animating elements",
      "reduce_motion": "Respect prefers-reduced-motion media query",
      "fps_target": "60fps on desktop, 30fps acceptable on mobile",
      "lazy_animation": "Initialize animations when element is in viewport"
    }
  },
