        "use_cases": [
          "Complex timeline animations",
          "Scroll-triggered animations",
          "SVG morphing and drawing",
          "Text splitting and animation",
          "Parallax effects",
          "Hero section animations"
        ]
      },
      "three_js": {
        "version": "0.160+",
        "libraries": [
          "@react-three/fiber",
          "@react-three/drei",
          "@react-three/postprocessing",
          "three-stdlib"
        ],
        "use_cases": [
          "3D bond visualization",
          "Interactive globe for infrastructure projects",
          "Particle effects for background",
          "3D charts and data visualization",
          "Animated logo and branding",
          "WebGL backgrounds"
        ]
      },
      "lenis": {
        "version": "1.0+",
        "package": "@studio-freight/lenis",
        "integration": "@studio-freight/react-lenis",
        "use_cases": [
          "Smooth scrolling experience",
          "Momentum-based scrolling",
          "Integration with GSAP ScrollTrigger",
          "Enhanced user experience on long pages"
        ]
      },
      "framer_motion": {
        "version": "11.0+",
        "use_cases": [
          "Page transitions",
          "Component enter/exit animations",
          "Gesture-based interactions",
          "Layout animations",
          "Shared element transitions",
          "Drag and drop interactions",
          "Modal and dialog animations"
        ],
        "features": [
          "useAnimation hook",
          "AnimatePresence for exit animations",
          "Layout animations",
          "useScroll hook",
          "useTransform hook",
          "Spring animations"
        ]
      },
      "additional_libraries": {
        "auto_animate": "@formkit/auto-animate - Automatic animations for list items",
        "react_spring": "react-spring - Physics-based animations",
        "anime_js": "anime.js - Lightweight animation library",
