{
  "project": {
    "name": "Infrastructure Bond Platform - Frontend",
    "framework": "Next.js 14+ with App Router",
    "language": "TypeScript",
    "version": "1.0.0",
    "description": "Modern, responsive, and highly animated frontend for infrastructure bond tokenization platform"
  },
  "technology_stack": {
    "core": {
      "framework": "Next.js 14+",
      "react_version": "18.2+",
      "typescript": "5.0+",
      "node_version": "18+"
    },
    "styling": {
      "primary": "Tailwind CSS 3.4+",
      "methodology": "Utility-first CSS",
      "css_modules": "Enabled for component-specific styles",
      "preprocessor": "PostCSS",
      "plugins": [
        "autoprefixer",
        "tailwindcss-animate",
        "@tailwindcss/forms",
        "@tailwindcss/typography",
        "@tailwindcss/aspect-ratio"
      ]
    },
    "ui_components": {
      "component_library": "shadcn/ui",
      "headless_ui": "Radix UI",
      "icons": "Lucide React + React Icons",
      "data_visualization": "Recharts + Chart.js + D3.js",
      "forms": "React Hook Form + Zod validation",
      "tables": "TanStack Table (React Table v8)",
      "calendar": "React Day Picker",
      "toast": "Sonner"
    },
    "animation_libraries": {
      "gsap": {
        "version": "3.12+",
        "plugins": [
          "ScrollTrigger",
          "ScrollSmoother",
          "SplitText",
