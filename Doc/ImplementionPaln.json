{
  "project": {
    "name": "Mudra - Infrastructure Bond Tokenization Platform",
    "id": "9.12",
    "hackathon": "CIH 3.0 - Central India Hackathon",
    "sdg": "SDG 9 - Industry, Innovation and Infrastructure",
    "description": "A fintech platform for tokenizing infrastructure bonds to enable public-private funding",
    "team": "Co Devians",
    "version": "1.0.0"
  },
  "development_philosophy": {
    "approach": "Incremental Development",
    "principle": "Start simple, add features progressively",
    "methodology": "Build a working product first, then enhance iteratively",
    "rules": [
      "Each iteration MUST result in a working application",
      "No feature is added until the current version is stable",
      "Test thoroughly before moving to next iteration",
      "Keep code modular for easy feature additions",
      "Document changes at each iteration"
    ]
  },
  "iteration_roadmap": {
    "iteration_0": {
      "name": "Hello World - Basic Setup",
      "goal": "Get frontend and backend running and talking to each other",
      "duration": "2-3 hours",
      "output": "Two servers running, frontend can call backend API",
      "features": [
        "Next.js frontend running on port 5001",
        "Express backend running on port 3210",
        "Single API endpoint: GET /api/health",
        "Frontend displays 'Connected to Backend' message",
        "Basic folder structure created"
      ],
      "files_to_create": {
        "frontend": [
          "package.json",
          "app/page.tsx",
          "app/layout.tsx"
        ],
        "backend": [
          "package.json",
          "src/server.js",
          "src/routes/health.js"
        ]
      },
      "success_criteria": [
        "npm run dev starts both servers",
        "Frontend shows backend connection status",
        "No errors in console"
      ]
    },
    "iteration_1": {
      "name": "Static Bond Display",
      "goal": "Display hardcoded bond data on frontend",
      "duration": "2-3 hours",
      "output": "Homepage showing list of bonds (static data)",
      "features": [
        "Hardcoded array of 5 sample bonds in frontend",
        "BondCard component to display bond info",
        "Simple grid layout for bond listing",
        "Basic styling with Tailwind CSS",
        "Navbar with logo and placeholder links"
      ],
      "no_backend_needed": true,
      "success_criteria": [
        "5 bond cards visible on homepage",
        "Each card shows: name, issuer, return rate, risk level",
        "Responsive grid (1 col mobile, 2 tablet, 3 desktop)"
      ]
    },
    "iteration_2": {
      "name": "Backend API for Bonds",
      "goal": "Move bond data to backend, fetch via API",
      "duration": "2-3 hours",
      "output": "Bonds fetched from backend API",
      "features": [
        "GET /api/bonds endpoint returning JSON",
        "Bond data stored in a JSON file (no DB yet)",
        "Frontend fetches bonds on page load",
        "Loading state while fetching",
        "Error handling if API fails"
      ],
      "success_criteria": [
        "API returns list of bonds",
        "Frontend displays bonds from API",
        "Loading spinner shows during fetch"
      ]
    },
    "iteration_3": {
      "name": "MongoDB Integration",
      "goal": "Store bonds in MongoDB database",
      "duration": "3-4 hours",
      "output": "Bonds stored in and retrieved from MongoDB",
      "features": [
        "MongoDB connection setup",
        "Bond schema with Mongoose",
        "Seed script to populate sample bonds",
        "GET /api/bonds reads from database",
        "GET /api/bonds/:id for single bond"
      ],
      "success_criteria": [
        "MongoDB connected on server start",
        "Seed script creates 10 sample bonds",
        "API returns bonds from database"
      ]
    },
    "iteration_4": {
      "name": "Bond Details Page",
      "goal": "Click on bond to see full details",
      "duration": "2-3 hours",
      "output": "Detailed bond view page",
      "features": [
        "Dynamic route /bonds/[id]",
        "Fetch single bond by ID",
        "Display all bond information",
        "Back button to return to list",
        "404 page if bond not found"
      ],
      "success_criteria": [
        "Clicking bond card navigates to details",
        "All bond fields displayed",
        "Back navigation works"
      ]
    },
    "iteration_5": {
      "name": "User Authentication - Basic",
      "goal": "User can register and login",
      "duration": "4-5 hours",
      "output": "Working login/register system",
      "features": [
        "User model in MongoDB",
        "POST /api/auth/register endpoint",
        "POST /api/auth/login endpoint",
        "Password hashing with bcrypt",
        "JWT token generation",
        "Login and Register pages in frontend",
        "Store token in localStorage"
      ],
      "success_criteria": [
        "New user can register",
        "Registered user can login",
        "JWT token returned on login",
        "Token stored in browser"
      ]
    },
    "iteration_6": {
      "name": "Protected Routes & User State",
      "goal": "Some pages require login",
      "duration": "3-4 hours",
      "output": "Authentication-aware application",
      "features": [
        "Auth middleware on backend",
        "Protected API routes",
        "Auth context/store in frontend",
        "Redirect to login if not authenticated",
        "Show user name in navbar when logged in",
        "Logout functionality"
      ],
      "success_criteria": [
        "Cannot access protected routes without token",
        "Navbar shows login/logout based on state",
        "Logout clears token and redirects"
      ]
    },
    "iteration_7": {
      "name": "User Dashboard",
      "goal": "Logged-in users see their dashboard",
      "duration": "3-4 hours",
      "output": "Basic user dashboard",
      "features": [
        "Dashboard page (protected)",
        "Display user profile info",
        "Placeholder sections for portfolio",
        "Welcome message with user name",
        "Navigation sidebar"
      ],
      "success_criteria": [
        "Dashboard only accessible when logged in",
        "User info displayed correctly",
        "Clean dashboard layout"
      ]
    },
    "iteration_8": {
      "name": "Paper Trading - Buy Bonds",
      "goal": "User can 'buy' bonds with virtual money",
      "duration": "4-5 hours",
      "output": "Working paper trading buy feature",
      "features": [
        "Virtual wallet with ₹10,00,000 balance",
        "Buy button on bond details page",
        "Quantity input modal",
        "Transaction recorded in database",
        "Wallet balance updates",
        "Success/error notifications"
      ],
      "success_criteria": [
        "User can buy bonds",
        "Wallet balance decreases",
        "Transaction saved in database"
      ]
    },
    "iteration_9": {
      "name": "Portfolio View",
      "goal": "User can see their holdings",
      "duration": "3-4 hours",
      "output": "Portfolio page showing owned bonds",
      "features": [
        "Portfolio model in database",
        "GET /api/portfolio endpoint",
        "Portfolio page in frontend",
        "List of owned bonds with quantities",
        "Total investment value",
        "Basic P&L calculation"
      ],
      "success_criteria": [
        "Portfolio shows all purchases",
        "Quantities are correct",
        "Total value calculated"
      ]
    },
    "iteration_10": {
      "name": "Paper Trading - Sell Bonds",
      "goal": "User can sell their holdings",
      "duration": "3-4 hours",
      "output": "Complete buy/sell paper trading",
      "features": [
        "Sell button in portfolio",
        "Quantity selection (max = owned)",
